{% extends 'base.html.twig' %}
{% form_theme form 'bootstrap_3_horizontal_layout.html.twig' %}
{% block body %}
    <div class="container">
        <div class="page-header">
            <h1 class="display-3">
                Add a description of a visit
            </h1>
        </div>
        <div class="jumbotron m-t-3">
            <div class="container">
                {{form(form)}}
                </div>
                {% for flash_message in app.session.flashBag.get('notice') %}
                    <div class="alert alert-success m-t-2" role="alert">
                        <div class="flash-notice">
                            {{ flash_message }}
                        </div>
                    </div>
                {% endfor %}
                <table class="table table-bordered table-inverse m-t-2 ">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>DATE</th>
                            <th>Description</th>
                            <th>Medicines</th>

                        </tr>
                    </thead>
                    <tbody>
                        {% for visit in visits %}
                            <tr>
                                <th>{{loop.index}}</th>
                                <th>{{visit.created|date('H:i d.m.Y')}}</th>
                                <th>{{visit.description}}</th>
                                <th>{{visit.medicines}}</th>
                            </tr>
                        {% endfor %}

                    </tbody>
                </table>
            </div>
        </div>
    {% endblock %}
    {% block stylesheets %}{% endblock %}
