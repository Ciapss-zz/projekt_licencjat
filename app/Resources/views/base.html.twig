<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Test Application{% endblock %}</title>
        <link rel="stylesheet"href="{{ asset('assets/vendor/bootstrap/dist/css/bootstrap.min.css') }}">
        <link rel="stylesheet"href="{{ asset('assets/css/main.css') }}">
        {% block javascripts %}
            {% javascripts '@AppBundle/Resources/public/js/*' %}
                <script src="{{ asset_url }}"></script>
            {% endjavascripts %}
        {% endblock %}
    </head>
    <body>
        {% block menu %}
        {% set currentPath = app.request.get('_route') %}
        <div class="container ">
          <ul class="nav nav-tabs m-b-3  m-t-1">
            <li class="nav-item">
              <a class="nav-link  {% if currentPath == 'homepage' %}active{% endif %} " href="{{path('homepage')}}">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link  {% if currentPath == 'about' %}active{% endif %}" href="{{path('about')}}">About</a>
            </li>
            <li class="nav-item">
              <a class="nav-link  {% if currentPath == 'departments' %}active{% endif %}" href="{{path('departments')}}">Departments</a>
            </li>
            <li class="nav-item">
              <a class="nav-link  {% if currentPath == 'contact' %}active{% endif %} " href="{{path('contact')}}">Contact</a>
            </li>
            {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
            <li class="nav-item" style="float:right;">
                  <a class="nav-link" href="{{ path('fos_user_security_logout') }}">Logout</a>
            </li>
            <li class="nav-item" style="float:right;">
              <a class="nav-link {% if currentPath == 'dashboard' or currentPath == 'dashboard_admin' %}active{% endif %}" href="{{path('dashboard')}}">My Account</a>
            </li>
            {% else %}
            <li class="nav-item" style="float:right;">
              <a class="nav-link " href="{{path('fos_user_security_login')}}">Login / Register</a>
            </li>
            {% endif %}
          </ul>
        </div>
        {% endblock %}
        <div id="content">
            {% block body %}{% endblock %}
        </div>
    </body>
</html>
