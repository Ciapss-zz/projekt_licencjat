{% trans_default_domain 'FOSUserBundle' %}

<div class="card m-t-3 p-t-3">
    <div class="card-block">
        {{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register'}}) }}
        <div class="form-group row ">
            <label class="col-sm-2 offset-sm-3 col-form-label" for="username">E-mail</label>
            <div class="col-sm-3 ">
                {{ form_widget(form.email) }}
            </div>
        </div>
        <div class="form-group row ">
            <label class="col-sm-2 offset-sm-3 col-form-label" for="username">Username</label>
            <div class="col-sm-3 ">
              {{ form_widget(form.username) }}

            </div>
        </div>
        <div class="form-group row ">
            <label class="col-sm-2 offset-sm-3 col-form-label" for="username">Password</label>
            <div class="col-sm-3 ">
              {{ form_widget(form.plainPassword,{'attr':{'label':'dupa'}}) }}
            </div>
        </div>
        <div class="form-group row ">
            <label class="col-sm-2 offset-sm-3 col-form-label" for="username">Confirm password</label>
            <div class="col-sm-3 ">
              {{ form_widget(form.plainPassword.second) }}
            </div>
        </div>
        <div class="form-group row">
          <div class="col-sm-4 offset-sm-4 text-xs-center">
            <input class="btn btn-primary m-x-auto" type="submit" value="Register"/>
          </div>
        </div>
        {{ form_end(form) }}
    </div>
</div>





