{% extends "FOSUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}
<div class="card m-t-3 p-t-3">

  <div class="card-block">

    <form action="{{ path("fos_user_security_check") }}" method="post">
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

      <div class="form-group row ">
        <label class="col-sm-2 offset-sm-3 col-form-label" for="username">Login</label>
        <div class="col-sm-3 ">
          <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" required="required" />
        </div>
      </div>


      <div class="form-group row">
        <label class="col-sm-2 offset-sm-3 col-form-label" for="password">Has≈Ço</label>
        <div class="col-sm-3">
        <input class="form-control" type="password" id="password" name="_password" required="required" />
        </div>
      </div>

      <div class="form-group row  m-t-3">
        <div class="col-sm-4 offset-sm-4">
          <div class="form-check text-xs-center">
            <label class="form-check-label text-xs-center" for="remember_me">
              <input class="form-check-input text-xs-center" class="form-check-input" type="checkbox" id="remember_me" name="_remember_me" value="on" /> Remember me
            </label>
          </div>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-sm-4 offset-sm-4 text-xs-center">
          <input class="btn btn-primary m-x-auto" type="submit" id="_submit" name="_submit" value="Login" />
          <a class="btn btn-secondary m-x-auto" href="{{path('fos_user_registration_register')}}"> Register </a>
        </div>
      </div>



    </form>
  </div>
</div>

{% endblock fos_user_content %}
